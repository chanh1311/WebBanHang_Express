<div id="content-wrapper">
  <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb block-title">
        <li class="breadcrumb-item">
          <a href="#" class="title-page">Danh sách các mặt hàng trong đơn hàng</a>
        </li>
      </ol>

      <!-- DataTables -->
      <div class="card mb-3">
          <div class="card-header">
              <i class="fas fa-table"></i>
              Danh sách các mặt hàng trong đơn hàng
          </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead class="title-table">
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Thương hiệu</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá (VNĐ)</th>
                    <th>Màn hình</th>
                    <th>Camera sau</th>
                    <th>CPU</th>
                    <th>Ram</th>
                    <th>Bộ nhớ</th>
                    <th style="color: blue;">Số lượng mua</th>
                    <th>Hình ảnh</th>
                    
                </tr>
                </thead>
                <tbody class="body-table">
                {{#if data}}
                {{#each data}}
                <tr>
                    <th scope="row">{{this.ma}}</th>
                    <td>{{this.loai}}</td>
                    <td>{{this.ten}}</td>
                    <td>{{this.giaVnd}}</td>
                    <td>{{this.manHinh}}</td>
                    <td>{{this.cameraSau}}</td>
                    <td>{{this.cpu}}</td>
                    <td>{{this.ram}}</td>
                    <td>{{this.rom}}</td>
                    <td style="color:black;">{{this.soLuongMua}}</td>
                    <td><a href="../{{this.hinhAnh}}"><img src="../{{this.hinhAnh}}" alt="" style="width:70%;height:70%;"></a></td>
                </tr>
                {{/each}}
                {{/if}}
              </tbody>
                <tr>
                  <td colspan="11" align="center" style="color: red;font-size:20px"><b>Tổng số tiền: </b>{{tongTienVnd}}</td>
                </tr>
                
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>