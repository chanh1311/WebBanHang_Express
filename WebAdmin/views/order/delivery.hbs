<div id="content-wrapper">
  <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb block-title">
        <li class="breadcrumb-item">
          <a href="#" class="title-page">Danh sách đơn hàng chưa xác nhận</a>
        </li>
      </ol>

      <!-- DataTables -->
      <div class="card mb-3">
          <div class="card-header">
              <i class="fas fa-table"></i>
              Danh sách đơn hàng chưa xác nhận
          </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableDate" width="100%" cellspacing="0">
              <thead class="title-table">
                <tr>
                    <th>Email người đặt hàng</th>
                    <th>Người nhận hàng</th>
                    <th>Số điện thoại người nhận hàng</th>
                    <th>Địa chỉ giao hàng</th>
                    <th>Ngày đặt hàng</th>
                    <th>Danh sách hàng hóa khách hàng đặt</th>
                    <th>Xác nhận đơn hàng</th>
                    <th style="color:red">Hủy đơn hàng</th>
                    <th>Đơn hàng đã xác nhận</th>
                </tr>
              </thead>
              <tbody class="body-table">
                {{#if data}}
                {{#each data}}
                <tr>
                    <th scope="row">{{this.email}}</th>
                    <td>{{this.nguoiNhan}}</td>
                    <td>{{this.sdtNguoiNhan}}</td>
                    <td>{{this.diaChiNhan}}</td>
                    <td>{{this.time}}</td>
                    <td><button type="button"><a href="/order/delivery/detail/{{this._id}}" class="button-a">Xem sản phẩm</a></button></td>
                    <td><button type="button"><a href="/order/deliverer/{{this._id}}" class="button-xn">Xác nhận đơn hàng</a></button></td>
                    <td><button type="button"><a href="/order/delivery/delete/{{this._id}}" class="button-huy">Hủy đơn hàng</a></button></td>
                    <td><button type="button"><a href="/order/deliverer" class="button-a">Đơn hàng đã xác nhận</a></button></td>
                </tr>
                {{/each}}
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>