<div id="content-wrapper">
  <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb block-title">
        <li class="breadcrumb-item">
          <a href="#" class="title-page">Xóa sản phẩm</a>
        </li>
      </ol>

      <!-- DataTables -->
      <div class="card mb-3">
          <div class="card-header">
              <i class="fas fa-table"></i>
              Danh sách sản phẩm
          </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead class="title-table">
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Thương hiệu</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá (VNĐ)</th>
                    <th>Màn hình</th>
                    <th>Camera trước</th>
                    <th>Camera sau</th>
                    <th>CPU</th>
                    <th>Ram</th>
                    <th>Bộ nhớ</th>
                    <th>Hình ảnh</th>
                    <th>Chọn</th>
                </tr>
              </thead>
              <tbody class="body-table">
                {{#if data}}
                {{#each data}}
                <tr>
                    <th scope="row">{{this.ma}}</th>
                    <td>{{this.loai}}</td>
                    <td>{{this.ten}}</td>
                    <td>{{this.soLuong}}</td>
                    <td>{{this.giaVnd}}</td>
                    <td>{{this.manHinh}}</td>
                    <td>{{this.cameraTruoc}}</td>
                    <td>{{this.cameraSau}}</td>
                    <td>{{this.cpu}}</td>
                    <td>{{this.ram}}</td>
                    <td>{{this.rom}}</td>
                    <td><a href="{{this.hinhAnh}}"><img src="{{this.hinhAnh}}" alt="" style="width:95%;height:95%;"></a></td>
                    <td><button type="button"><a href="/product/delete/{{this._id}}">Xóa</a></button></td>
                </tr>
                {{/each}}
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>