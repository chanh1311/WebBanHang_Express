<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb block-title" class="block-title">
        <li class="breadcrumb-item">
        <a href="#" class="title-page">Trang chủ</a>
        </li>
    </ol>

    <!-- Area Chart Example-->
    <div class="card mb-3">
        <div class="card-header">
        <i class="fas fa-chart-area"></i>
        Area Chart </div>
        <div class="card-body">
        <canvas id="myAreaChart" width="100%" height="30"></canvas>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card mb-3">
                <div class="card-header">
                <i class="fas fa-chart-area"></i>
                Pie Chart </div>
                <div class="card-body">
                <canvas id="myPieChart" width="100%" height="30"></canvas>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-3">
                <div class="card-header">
                <i class="fas fa-chart-area"></i>
                Bar Chart </div>
                <div class="card-body">
                <canvas id="myBarChart" width="100%" height="30"></canvas>
                </div>
            </div>
        </div>
    </div>
   




    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
        <i class="fas fa-table"></i>
        Tất cả sản phẩm</div>
        <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="title-table">
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Thương hiệu</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá (VNĐ)</th>
                    <th>Màn hình</th>
                    <th>Camera trước</th>
                    <th>Camera sau</th>
                    <th>CPU</th>
                    <th>Ram</th>
                    <th>Bộ nhớ</th>
                </tr>
                </thead>
                <tbody class="body-table">
                {{#if data}}
                {{#each data}}
                <tr>
                    <th scope="row">{{this.ma}}</th>
                    <td>{{this.loai}}</td>
                    <td>{{this.ten}}</td>
                    <td>{{this.soLuong}}</td>
                    <td>{{this.giaVnd}}</td>
                    <td>{{this.manHinh}}</td>
                    <td>{{this.cameraTruoc}}</td>
                    <td>{{this.cameraSau}}</td>
                    <td>{{this.cpu}}</td>
                    <td>{{this.ram}}</td>
                    <td>{{this.rom}}</td>
                </tr>
                {{/each}}
                {{/if}}
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>





