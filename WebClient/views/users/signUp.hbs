<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <div class="col-md-7">
                <!-- Billing Details -->
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Đăng kí tài khoản</h3>
                    </div>
                    <form method="POST" action="/users/signUp">
                        <div class="form-group">
                            <input class="input" type="text" name="ten" placeholder="Tên">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="diaChi" placeholder="Địa chỉ">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="sdt" placeholder="Số điện thoại">
                        </div>
                        <div class="form-group">
                            <input class="input" type="email" name="email" id="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" id="imageurl" name="imageurl" placeholder="URL hình ảnh">
                        </div>
                        
                        <div class="form-group">
                            <input class="input" type="password" name="password" id="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input class="input" type="password" id="confirm_password" placeholder="Nhập lại password">
                        </div>
                        <p id="message">{{message}}</p><br>
                        <div>
                            <input id="register" class="primary-btn order-submit" type="submit" value="Đăng kí" />
                        </div>
                    </form>
                </div>
                <a href="/users/login" class="primary-btn order-submit">Trở về đăng nhập</a><br><br>
                <!-- /Billing Details -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>

    {{#extend "scripts"}}
    <script>
        $('#email').keyup(function () {
            $.getJSON('/api/users/check?email=' + $('#email').val(), function (data) {
                if (data) {
                    $('#message').html('Email đã tồn tại. Vui lòng chọn email khác.');
                    $("#register").attr("disabled", true);
                }
                else {
                    $('#message').html('');
                    $("#register").attr("disabled", false);
                }
            })
        });
    </script>
    {{/extend}}