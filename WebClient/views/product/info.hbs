    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <div class="col-md-12">
                <div class="section-title text-center">
                    <h3 class="title">Sản phẩm liên quan</h3>
                </div>
            </div>

            {{#if data1}}
            {{#each data1}}
            <!-- product -->
            <div class="col-md-3 col-xs-6">
                <div class="product">
                    <div class="product-img">
                        <img src="{{this.hinhAnh}}" alt="">
                    </div>
                    <div class="product-body">
                        <p class="product-category">{{this.loai}}</p>
                        <h3 class="product-name"><a href="/product/info/{{this._id}}">{{this.ten}}</a></h3>
                        <h4 class="product-price">{{this.giaVnd}}</h4>
                        <div class="product-rating">
                        </div>
                    </div>
                    <div class="add-to-cart">
                        <a href="/cart/add/{{this._id}}"><button class="add-to-cart-btn"><i
